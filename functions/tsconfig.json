{
	"compilerOptions": {
		"jsx": "react",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "./netlify/functions/actions",
		"resolveJsonModule": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["./*.ts", "./**/*.ts", "./**/*.js"]
}
